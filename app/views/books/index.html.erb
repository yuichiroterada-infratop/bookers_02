<h1>Books</h1>
<!--バリデーションのエラー部分-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors have occured.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--以下、投稿一覧画面-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td> <%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

<!--以下、新規投稿画面-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %></br>
  
  <%= f.submit "Create Book" %>
  
<% end %>


